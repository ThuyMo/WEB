<div class="card shadow mb-4">
  <h4 class="card-header">
    Category
  </h4>
  <div class="card-body">
    <form method="POST">
      <div class="form-group">
        {{!-- <label for="txtCatId">#</label> --}}
        <input type="text" class="form-control" id="txtid" name="id" readonly value="{{this.category.id}}">
      </div>
      <div class="form-group">
        <p style="color: black;padding-bottom:20px" for="txtCatName">Category</p style="">
        <input type="text" class="form-control" id="txttype" name="type" placeholder="Enter category name"
          autofocus value="{{this.category.type}}">
      </div>
      <a class="btn btn-outline-primary" href="/admin/categories" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Danh sách
      </a>
      <button type="submit" class="btn btn-outline-success" formaction="/admin/categories/patch">
        <i class="fa fa-check" aria-hidden="true"></i>
        Lưu
      </button>
  
      <button type="submit" class="btn btn-outline-danger" formaction="/admin/categories/del">
        <i class="fa fa-trash-o" aria-hidden="true"></i>
        Xóa
      </button>
    </form>
  </div>
  
</div>